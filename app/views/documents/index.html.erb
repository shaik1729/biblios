<%= link_to 'Upload New Document', new_document_path, class: 'btn btn-primary' %>


<div class="card mt-3">
  <h5 class="card-header">Your Documents</h5>
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @documents.each do |document| %>
          <tr>
            <td><%= document.title %></td>
            <td><%= document.content %></td>
            <td><%= link_to 'View', document, class: 'btn btn-sm btn-info' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

